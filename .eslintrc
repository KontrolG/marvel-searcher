{
  "ignorePatterns": ["node_modules/"],
  "extends": ["airbnb"],
  "rules": {
    "quotes": "off",
    "spaced-comment": "off",
    "no-console": "warn",
    "consistent-return": "off",
    "func-names": "off",
    "object-shorthand": ["warn", "always"],
    "no-process-exit": "off",
    "no-param-reassign": [
      "error",
      {
        "props": true
      }
    ],
    "no-return-await": "off",
    "no-underscore-dangle": "off",
    "class-methods-use-this": "off",
    "prefer-destructuring": [
      "error",
      {
        "object": true,
        "array": false
      }
    ],
    "no-undef": [
      "warn",
      {
        "typeof": false
      }
    ],
    "no-unused-vars": [
      "error",
      {
        "argsIgnorePattern": "req|res|next|val"
      }
    ]
  }
}
